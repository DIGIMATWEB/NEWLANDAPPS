<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginHeader" parent="android:style/Theme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:color">@color/colorGray</item>
    </style>

    <style name="LoginText" parent="android:style/Theme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:color">#FFFFFF</item>
    </style>
    <style name="LoginHint" parent="android:style/Theme">
        <item name="android:fontFamily">@font/sfprotext_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#00000000</item>
        <item name="android:color">@color/colorWhite</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">#999999</item>
    </style>
    <style name="Widget.Theme.Quesipizzas.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Quesipizzas.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>